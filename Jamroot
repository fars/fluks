DEBUG = -DDEBUG ;
using gcc
	: # compiler version
	: # c++ compile command
	:
	    # -D_BSD_SOURCE needed for proper endian macros
	    <cxxflags>"-std=c++98 -D_BSD_SOURCE $(DEBUG)"
	    <cflags>"-std=c99 -D_BSD_SOURCE $(DEBUG)"
	;
lib boost_filesystem ;
lib boost_program_options ;
lib boost_regex ;
lib devmapper ;
lib ssl ;
lib uuid ;
exe fluks
	:
	    # C++
	    af.cpp backup.cpp crypt.cpp
	    detect.cpp dm.cpp errors.cpp fluks.cpp
	    hash.cpp hmac.cpp luks.cpp os.cpp pbkdf2.cpp
	    support.cpp tiger.cpp util.cpp

	    # plain C
	    cast6.c serpent.c twofish.c whirlpool.c

	    # libraries
	    boost_filesystem boost_program_options
	    boost_regex devmapper ssl uuid
	;
